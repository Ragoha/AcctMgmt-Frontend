<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.co.acctmgmt.mapper.SBGTCDMapper">
	<select id="getSBGTCDData" parameterType="String" resultType="SBGTCD">
		SELECT * FROM SBGTCD where GROUP_CD=#{GROUP_CD};
	</select>
	
	<select id="getDetailInfo" parameterType="String" resultType="SBGTCD">
		SELECT 
		CTL_FG , BGAJUST_FG , TO_DT , BOTTOM_FG ,BIZ_FG  
		FROM sbgtcd 
		WHERE BGT_CD=#{bgt_CD};
	</select>
</mapper>